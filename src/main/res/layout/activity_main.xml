<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:screenOrientation="portrait"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/MP_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="cursive" />

        <TextView
            android:id="@+id/tag_viewer_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="email|web"
            android:gravity="center"
            android:padding="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset_reel"
            android:text="@string/Reset_Reel" />


        <LinearLayout
            android:id="@+id/dataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="50dp">

                <TextView

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:ems="10"
                    android:paddingRight="0dp"
                    android:text="UID:"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/UIDText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Dummy ID" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="50dp">

                <TextView

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:ems="10"
                    android:paddingRight="10dp"
                    android:text="Tag Type:"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Dummy ID" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tmpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Temperature" />
        <RadioGroup
                android:id="@+id/rgTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">




                    <RadioButton
                        android:id="@+id/radio190"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="190°" />

                    <RadioButton
                        android:id="@+id/radio200"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="200°" />

                    <RadioButton
                        android:id="@+id/radio210"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="210°" />


            </RadioGroup>

        <TextView
            android:id="@+id/FLTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Filament Length" />
        <RadioGroup
            android:id="@+id/rgLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/radio100m"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="100m" />

            <RadioButton
                android:id="@+id/radio200m"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="200m" />

            <RadioButton
                android:id="@+id/radio300m"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="300m" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/set_PWD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Set_Pwd" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>